{
  "name": "echord",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "MJ Anglin",
    "email": "contact@mjanglin.com",
    "url": "https://www.mjanglin.com"
  },
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "npx prisma generate && next build",
    "start": "next start",
    "lint": "next lint && prettier --write .",
    "db": "npx prisma db push && npx prisma db pull && npx prisma generate",
    "db:force": "npx prisma db push --force-reset && npx prisma db pull && npx prisma generate",
    "studio": "npx prisma studio",
    "latest": "pnpm up --latest && pnpm db",
    "prepare": "husky"
  },
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "crypto-js": "^4.2.0",
    "jose": "^6.0.10",
    "next": "15.3.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hot-toast": "^2.5.2",
    "uuid": "^11.1.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@next/eslint-plugin-next": "^15.3.1",
    "@tailwindcss/postcss": "^4.1.4",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.14.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "eslint": "^9.25.1",
    "eslint-config-next": "15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "lucide-react": "^0.503.0",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "tailwindcss": "^4.1.4",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/clxrityy/echord.git"
  },
  "homepage": "https://github.com/clxrityy/echord#readme",
  "bugs": {
    "url": "https://github.com/clxrityy/echord/issues"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@prisma/client",
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md}": "prettier --write"
  }
}
